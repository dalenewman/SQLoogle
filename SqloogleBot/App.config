<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="sqloogleBot" type="Sqloogle.SqloogleBotConfiguration, Sqloogle"/>
    <section name="nlog" type="Sqloogle.Libs.NLog.Config.ConfigSectionHandler, Sqloogle"/>
  </configSections>

  <sqloogleBot searchIndexPath="c:\temp\SqloogleIndex\" filePath="">

    <servers>
      <add name="server" connectionString="connection-string"/>
    </servers>

    <skips>
      <add name="master"/>
      <add name="model"/>
      <add name="tempdb"/>
      <add name="msdb"/>
      <add name="Management" operator="StartsWith"/>
      <add name="ReportServer" operator="StartsWith"/>
      <add name="Bdc_Service_DB_" operator="StartsWith"/>
      <add name="SharePoint_" operator="StartsWith"/>
      <add name="WSS_" operator="StartsWith"/>
      <add name="AspNet" operator="StartsWith"/>
      <add name="TEST" operator="StartsWith"/>
      <add name="WSS" operator="StartsWith"/>
    </skips>
  </sqloogleBot>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets async="true">
      <target name="file" xsi:type="File" fileName="c:/temp/SQLoogleLogs/${date:format=yyyy}/${date:format=MM}/${date:format=dd}/SQLoogle.log" layout="${date:format=HH\:mm\:ss} | ${level} | ${message}"/>
      <target name="trace" xsi:type="Trace" layout="${date:format=HH\:mm\:ss} | ${level} | ${logger} | ${message}"/>
      <target name="console" xsi:type="ColoredConsole" layout="${date:format=HH\:mm\:ss} | ${level} | ${message}"/>
      <target xsi:type="BufferingWrapper" name="mailBuffer" slidingTimeout="True" bufferSize="100" flushTimeout="120000">
        <target name="mail" xsi:type="Mail" smtpServer="" from="" subject="SQLoogle Error!" to=""/>
      </target>
    </targets>
    <rules>
      <logger name="*" minlevel="Info" writeTo="console"/>
      <logger name="*" minlevel="Info" writeTo="file"/>
      <logger name="*" minlevel="Warn" writeTo="mail"/>
    </rules>
  </nlog>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>

</configuration>
